<%- include('partials/header'); %>

<!-- Begin Page Content -->
<div class="container">
  <div class="row justify-content-center">

  <!-- Login Text -->
  <div class="m-auto col-lg-5 col-md-6">
    <h4 class="text-center mb-3">Forgot Password</h4>
    <p class="text-center mb-3">Your reset code has been sent to your given email address. Please type it here.</p>
    
    <form action="/reset-code" method="POST" class="validation user">
      <div class="form-group">
        <input type="text" class="form-control form-control-user" name="code" placeholder="Enter 6 digits Code" data-rule="minlen:6" data-msg="Please enter at least 6 chars">
        <div class="validate"></div>
      </div>
      <div class="mb-3">
          <div id="check"></div>
          <div class="loading">Loading</div>
          <div class="error-message"></div>
          <div class="sent-message">Matched Successfully!</div>
      </div>
      <button type="submit" class="btn btn-primary btn-user btn-block"> Reset</button>

    </form>
  </div>
  </div>
</div>
<!-- /.container-fluid -->

</div>
<!-- End of Main Content -->

<%- include('partials/footer'); %>