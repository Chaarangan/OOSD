<%- include("../partials/header") %>

 <div class="container">
    <div class="container">
        <header class="jumbotron">
            <div class="container text-center">
                <h1>Welcome to Family</h1>
                <p>View our hand-picked family all over Sri Lanka</p>
                <hr>
                <div class="d-flex justify-content-center mt-3">
                    <a class="btn btn-primary btn-large" href="/family/new">Add New Family</a>                              
                    <a href="/members/queries" class="btn btn-primary ml-3" id=" memberbutton">Search Members</a>
                </div>
            </div>
        </header>
        <div class="container-contact100-2">

            <div class="wrap-contact100">
                <form class="contact100-form validate-form" action="/family/queries" method="POST">
                    <span class="contact100-form-title text-white">
                        Search Family
                    </span>
        
                    <div class="wrap-input100 " >
                        <input class="input100" type="text" name="query" placeholder="search a family">
                        <span class="focus-input100"></span>
                    </div>
                    <div class="container-contact100-form-btn">
                        <button class="contact100-form-btn btn-sm">
                            <span>                                
                                Search
                            </span>
                        </button>
                    </div>
                </form>
            </div>
            
        </div>
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% families.forEach(function(family) { %>
            <div class="col-md-3 col-sm-3 ">
                <div class="thumbnail">
                    
                    <div class="caption">
                        <h4 class="pt-3"> <%= family.name %> </h4>
                    </div>
                    <p class="mt-3 pb-3">
                        <a href="/family/<%= family._id  %> " class="btn btn-primary">More info</a>
                    </p>
                </div>
            </div>   
        <% }); %>
    </div>
    
</div> 



<%- include("../partials/footer") %>